<Window x:Class="XlsxGanttChartNet4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XlsxGanttChartNet4"
        xmlns:pdgcc="clr-namespace:DlhSoft.Windows.Controls;assembly=DlhSoft.ProjectData.GanttChart.LightWPF.Controls"
        mc:Ignorable="d"
        Title="Gantt Chart - Excel adapter" Height="450" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="4">
            <Button Content="Load" Margin="4" Padding="4" Click="LoadButton_Click"/>
            <Button Content="Save" Margin="4" Padding="4" Click="SaveButton_Click"/>
        </StackPanel>
        <pdgcc:GanttChartDataGrid Name="GanttChartDataGrid"/>
    </DockPanel>
</Window>
